"""

height = 1.75
weight = 80.5
bmi= weight/(height*height)
bmi=float('%.1f' %bmi)
if bmi<18.5:
    print('您的体重过轻')
elif bmi>=18.5 and bmi<25:
    print('您的体重正常')
elif bmi>=25 and bmi<28:
    print('您的体重过重')
elif bmi>=28 and bmi<32:
    print('您的体重肥胖')
else:
    print('您的体重严重过胖')
 
